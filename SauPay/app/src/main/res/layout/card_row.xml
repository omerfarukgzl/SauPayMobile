<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="238dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/green_card" />

            <TextView
                android:id="@+id/cardNumberText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="13dp"
                android:text="1111 1111 1111 1111"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/cardExpireDateText"
                app:layout_constraintEnd_toEndOf="@+id/cardExpireDateText"
                app:layout_constraintStart_toStartOf="@+id/cardHolderNameText"
                app:layout_constraintTop_toBottomOf="@+id/bankNameText" />

            <TextView
                android:id="@+id/cardHolderNameText"
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="7dp"
                android:text="Ömer Faruk Güzel"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/cardExpireDateText"
                app:layout_constraintEnd_toStartOf="@+id/cardExpireDateText"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/bankNameText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="64dp"
                android:text="Kuveyt Türk"
                android:textColor="#DAD124"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/cardNumberText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardExpireDateText"
                android:layout_width="60dp"
                android:layout_height="33dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="29dp"
                android:text="12/54"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardHolderNameText"
                app:layout_constraintTop_toBottomOf="@+id/cardNumberText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
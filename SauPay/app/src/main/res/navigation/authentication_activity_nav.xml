<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authentication_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.saupay.ui.authentication.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_loginFragment_to_paymentActivty"
            app:destination="@id/paymentActivty" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.saupay.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <argument
            android:name="loginResponse"
            app:argType="com.example.saupay.data.remote.login.response.LoginResponse" />
    </activity>
    <activity
        android:id="@+id/paymentActivty"
        android:name="com.example.saupay.ui.payment.verification.PaymentActivty"
        android:label="activity_payment"
        tools:layout="@layout/activity_payment" >
        <argument
            android:name="loginResponse"
            app:argType="com.example.saupay.data.remote.login.response.LoginResponse" />
        <argument
            android:name="paymentToken"
            app:argType="string" />
        <argument
            android:name="email"
            app:argType="string" />
    </activity>
</navigation>